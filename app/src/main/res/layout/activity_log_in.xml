<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A36641"


    >

    <TextView
        android:id="@+id/tv_xogame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E3B21"
        android:padding="20dp"
        android:text="XO Game"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <EditText
        android:id="@+id/edd_player1name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:hint="Player 1 Name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_xogame1"
        app:layout_constraintStart_toStartOf="parent"



        />

    <EditText
        android:id="@+id/edd_player2name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:hint="Player 2 Name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edd_player1name"
        app:layout_constraintStart_toStartOf="parent"



        />

    <Button
        android:id="@+id/botton_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edd_player2name"
        android:layout_marginTop="40dp"
        android:text="Start Game"
        android:textSize="32sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Develop this Game By Hossam Eltohame"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        />

</androidx.constraintlayout.widget.ConstraintLayout>